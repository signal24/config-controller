{
    "name": "@signal24/config-controller",
    "version": "1.0.0",
    "description": "Simple Kubernetes controller to create key/value Secrets from encrypted .env files stored in ConfigMaps",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "dev": "ts-node src/index.ts",
        "build": "rm -rf dist && tsc -p tsconfig.json",
        "format": "prettier --write . && eslint src --rule 'prettier/prettier: off' --fix",
        "test": "jest",
        "watch": "tsc -w -p tsconfig.json"
    },
    "author": "Sean Ferguson <hello@sgnl24.com>",
    "license": "ISC",
    "dependencies": {
        "@kubernetes/client-node": "^0.20.0",
        "@signal24/config": "1.8.0",
        "pino": "^8.19.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.30",
        "@typescript-eslint/eslint-plugin": "^7.3.1",
        "@typescript-eslint/parser": "^7.3.1",
        "buildkite-test-collector": "^1.7.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-simple-import-sort": "^12.0.0",
        "eslint-plugin-unused-imports": "^3.1.0",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tslib": "^2.6.2",
        "type-fest": "^4.13.0",
        "typescript": "^5.4.2"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "publishConfig": {
        "access": "public"
    }
}
